                    "type": "string"
                  },
                  "last_name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "number": {
                    "type": "string"
                  },
                  "uid": {
                    "type": "string"
                  }
                },
                "required": [
                  "first_name",
                  "last_name",
                  "email",
                  "password",
                  "number",
                  "uid"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Signup successful"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
