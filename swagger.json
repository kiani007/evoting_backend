    "/candidate/add-candidate": {
      "post": {
        "summary": "Add a new candidate",
        "tags": ["Candidate"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "party_name": {
                    "type": "string"
                  },

                 "position": {
                  "type": "string",
                  "enum": ["president", "vice_president"]
                }
                },
                "required": ["name", "party_name", "position"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Candidate added successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
